<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>

            <item >
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="#9e7940" />
                    <size android:width="100dp" android:height="100dp" />
                </shape>
            </item>

            <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="#9e7940" />
                </shape>
            </item>

            <item android:left="7dp" android:right="7dp" android:top="7dp" android:bottom="7dp">
                <shape android:shape="oval">
                    <solid android:color="#000000" />
                </shape>
            </item>

            <item android:left="9dp" android:right="9dp" android:top="9dp" android:bottom="9dp">
                <bitmap android:src="@drawable/icn_alchemy" android:gravity="center"
                    android:tintMode="multiply" android:tint="#9e7940"
                    />

            </item>

        </layer-list>
    </item>

</selector>