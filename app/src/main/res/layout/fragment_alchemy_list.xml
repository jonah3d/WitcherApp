<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alchemyfragmentlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background">

    <TextView
        android:id="@+id/txtv_alchemy_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/minion_pro_medium"
        android:text="Encyclopedia Of Enemies"
        android:textColor="#9D9D9D"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AlchemyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/the_witcher"
        android:text="ALCHEMY"
        android:textColor="#FF9800"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/txtv_alchemy_subtext"
        app:layout_constraintStart_toStartOf="@+id/txtv_alchemy_subtext"
        app:layout_constraintTop_toBottomOf="@+id/txtv_alchemy_subtext" />

    <LinearLayout
        android:id="@+id/AlchemyButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AlchemyTextView">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bombs"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btnoutline_selector"
            android:text="BOMBS"
            android:textColor="#B3B1AE" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_oils"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btnoutline_selector"
            android:text="OILS"
            android:textColor="#B3B1AE" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_potions"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btnoutline_selector"
            android:text="POTIONS"
            android:textColor="#B3B1AE" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btnoutline_selector"
            android:text="SIGN"
            android:textColor="#B3B1AE" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AlchemyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/AlchemyButtonsLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>