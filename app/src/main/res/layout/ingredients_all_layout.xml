<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp"

        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:id="@+id/Tv_ingreientname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="ALBEDO"

                />

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/Tv_ingredientdescription"
                android:layout_width="200dp"
                android:layout_height="50dp"
                app:flow_wrapMode="chain2"
                android:textSize="10sp"
                android:text="Wyvern hide is an alchemy ingredient in The Witcher 3: Wild Hunt but is not needed for anything in particular. It can be dismantled into a Monster carapace and Chitinous shell."
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Tv_ingreientname"
                />

            <ImageView
                android:id="@+id/Iv_ingredientimage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/albedo"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>